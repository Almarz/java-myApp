<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Style for button when clicked -->
    <item android:state_pressed="true" >
        <shape>
            <solid  
				 android:color="@color/orange" />
            <stroke 
                android:width="1dp"
                android:color="@color/douch_blue" />
            <corners
                android:radius="5dp"  />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    
    <!--  Default Style for a Button -->
    <item >
        <shape >
            <gradient 
                android:startColor="@color/orange"
                android:endColor="@color/orange_light"
                android:angle="270"
                />
            <stroke 
                android:width="1dp"
                android:color="@color/light_green"
                />
            <corners android:radius="4dp"/>
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                />
        </shape>
    </item>
</selector>
