<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    
    <!--  style for button when cicked -->
    <item android:state_pressed="true">
        
        <shape >
           <solid
               android:color="#ff6633"
               /> 
            <stroke 
                android:width="1dp"
                android:color="#ff3355"
                />
            <corners 
                android:radius="5dp"
                />
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
        	  />
        </shape>
    </item>
    
    
    <!-- defaul style for button -->
    <item >
        <shape >
            <gradient 
                android:startColor="#ff3355"
                android:endColor="#EB152A"
                android:angle="360"
                />
            
            <stroke 
                android:width="1dp"
                android:color="#ff6633"
                />
            
            <corners android:radius="3dp"
                
                />
            
            <padding android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                
                />
        </shape>
        
        
        
        </item>

</selector>
